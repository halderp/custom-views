<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
        <OnClick/>
    </Transition>


    <ConstraintSet android:id="@+id/start">
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toEndOf="@+id/tv_fileNameLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            motion:layout_constraintHorizontal_bias="1.0"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp"
            android:id="@+id/tv_fileName" />
        <Constraint
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:id="@+id/tv_statusLabel"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            motion:layout_constraintTop_toBottomOf="@+id/tv_fileNameLabel"
            android:layout_marginTop="64dp" />
        <Constraint
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:id="@+id/tv_fileNameLabel"
            motion:layout_editor_absoluteY="24dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="64dp" />
        <Constraint
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:id="@+id/tv_fileName"
            motion:layout_constraintStart_toEndOf="@+id/tv_fileNameLabel"
            motion:layout_constraintTop_toTopOf="@+id/tv_fileNameLabel"
            motion:layout_constraintBottom_toBottomOf="@+id/tv_fileNameLabel"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="24dp" />
        <Constraint
            android:layout_marginEnd="16dp"
            android:layout_height="wrap_content"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:id="@+id/tv_status"
            motion:layout_constraintTop_toTopOf="@+id/tv_statusLabel"
            motion:layout_constraintBottom_toBottomOf="@+id/tv_statusLabel"
            motion:layout_constraintStart_toStartOf="@+id/tv_fileName" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/tv_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            motion:layout_constraintBottom_toTopOf="@+id/ok_button"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toEndOf="@+id/tv_statusLabel" />
        <Constraint
            android:id="@+id/tv_statusLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="10dp"
            motion:layout_constraintBottom_toTopOf="@+id/ok_button"
            motion:layout_constraintStart_toStartOf="@+id/tv_fileNameLabel" />
        <Constraint
            android:id="@+id/tv_fileName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textAlignment="center"
            motion:layout_constraintBottom_toTopOf="@+id/status"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toEndOf="@+id/tv_fileName" />

        <Constraint
            android:id="@+id/tv_fileNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            motion:layout_constraintBottom_toTopOf="@+id/tv_statusLabel"
            motion:layout_constraintStart_toStartOf="parent" />
    </ConstraintSet>
</MotionScene>